<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SearchVisualizer.SearchPage"
             Title="SearchPage"
             BackgroundColor="Black">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">
        
        <HorizontalStackLayout x:Name="hSL"
                               Spacing="2">
            
        </HorizontalStackLayout>
        
        <HorizontalStackLayout>
            <Label Text="Target:"
                   TextColor="White"/>

            <Entry x:Name="targetEntry"
                   WidthRequest="305"
                   TextColor="White"/>
            
        </HorizontalStackLayout>
        
        <HorizontalStackLayout>
            <Button Text="Linear Search"
                    Clicked="LinearSearch"/>
            
            <Button Text="Binary Search"
                    Clicked="BinarySearch"/>
            
            <Button Text="Reset Values"
                    Clicked="ResetValues"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>